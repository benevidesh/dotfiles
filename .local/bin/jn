#!/bin/bash

JRNL_DEST=$RESOURCES/Triquetra/jrnl
file=$(date +"%F" -d "$*")

desc_date=$(date +'%a, %d %b %Y' -d "$*")


file_header=$(cat << EOF
---
date: ${desc_date}
event:
---
EOF
)

if [ -f $JRNL_DEST/$file ]; then
    nvim + $JRNL_DEST/$file
else
    printf "%s\n" "${file_header}" > "${JRNL_DEST}/${file}"
    nvim + $JRNL_DEST/$file
fi

